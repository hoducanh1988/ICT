<Window x:Class="ICT_VNPT.UI.Windows.NewScriptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ICT_VNPT.UI.Windows"
        mc:Ignorable="d"
        Title="New Script Name" Height="170" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    
    <StackPanel Margin="5,10,5,5">
        <TextBlock TextWrapping="Wrap" Text="Vui lòng nhập tên sản phẩm cần tạo script test ở mục 'Script Name' ngay bên dưới đây."/>
        <Label Content="Script Name:" FontWeight="Bold"/>
        <TextBox x:Name="txtScriptName" KeyDown="TxtScriptName_KeyDown" Background="Yellow" FontWeight="Bold" Height="25" VerticalContentAlignment="Center" Margin="5,5,0,0" BorderThickness="0,0,0,1" />

        <WrapPanel Margin="0,5,0,0" HorizontalAlignment="Right">
            <Button Click="Button_Click" Height="22" Width="50" Content="OK"/>
        </WrapPanel>
        
    </StackPanel>
    
</Window>
