<Window x:Class="ICT_VNPT.UI.Windows.InputSerialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ICT_VNPT.UI.Windows"
        mc:Ignorable="d"
        Title="" Height="220" Width="450" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">

    <StackPanel Margin="0,0,0,0">
        <WrapPanel Height="40">
            <Label x:Name="lblMessage" Content="" Foreground="Red"/>
        </WrapPanel>
        <WrapPanel Margin="40,0,0,0">
            <Label Width="70" Content="Unit SN"/>
            <TextBox x:Name="txtSN" KeyDown="TxtSN_KeyDown" FontWeight="Bold" CharacterCasing="Upper" Padding="5,0,0,0" VerticalContentAlignment="Center" Width="230"/>
        </WrapPanel>
        <WrapPanel Margin="40,5,0,0">
            <Label Width="70" Content="Comments"/>
            <RichTextBox x:Name="rtbComments" Width="230" Height="70"/>
        </WrapPanel>
        <WrapPanel Margin="0,5,5,0" HorizontalAlignment="Right">
            <Button Click="Button_Click" Width="85" Content="Cancel" Height="25"/>
            <Button Click="Button_Click" Margin="5,0,0,0" Width="85" Height="25" Content="Ok"/>
        </WrapPanel>
    </StackPanel>
    
    
</Window>
